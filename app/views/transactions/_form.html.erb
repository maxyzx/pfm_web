<div class="modal fade" id=<%= target %> tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <% if type == "new" %>
          <h5>New Transaction </h5>
        <% else %>
          <h5>Edit </h5>
        <% end %>
      <%= form_with(model: transaction) do |form| %>
          <div class="form-group">
            <%= form.label :name, class:"col-form-label"%>
            <%= form.text_field :name, class:"form-control" ,required:"required"%>
          </div>
          <div class="form-group">
            <%= form.label :category, class:"col-form-label"%>
            <%= form.text_field :category, class:"form-control",required:"required" %>
          </div>
          <div class="form-group">
            <%= form.label :amount, class:"col-form-label"%>
            <%= form.text_field :amount , class:"form-control",required:"required"%>
          </div>

          <div class="form-group">
            <%= form.label :transaction_type %>
            <%= form.select :transaction_type, [["Deposit", 0], ["Expense", 1]], {}, {class: "form-control"} %>
          </div>

          <div class="form-group">
            <%= form.label :account_id %>
            <%= form.collection_select :account_id, current_user.accounts, :id, :name ,{}, {class: "form-control"}%>
          </div>

          <div class="actions container">
            <button type="button" class="btn btn-outline-secondary " data-dismiss="modal">Cancel</button>
            <%= form.submit class:"btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
